rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Deny all client-side access by default.
    // Your application should rely on server-side logic (Next.js Server Actions)
    // to interact with the database, which bypasses these rules.
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
